<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    android:padding="16dp"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/quantity_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/quantity_word"
        android:textAllCaps="true"
        android:textColor="@color/cardview_dark_background"
        android:textSize="16sp" />
    <!--android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"-->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/minus_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="@string/minus"
            android:backgroundTint="@android:color/tertiary_text_dark"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:layout_marginRight="8dp"
            android:onClick="decrement"/>

        <TextView
            android:id="@+id/quantity_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="8dp"
            android:text="@string/quantity_text"
            android:textColor="@color/black"
            android:textSize="16sp" />
        <!--android:layout_toRightOf="@id/minus_button"-->

        <Button
            android:id="@+id/plus_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="@string/plus_button"
            android:backgroundTint="@android:color/tertiary_text_dark"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:onClick="increment"/>
        <!--android:layout_toRightOf="@id/quantity_text_view"-->
    </LinearLayout>

    <TextView
        android:id="@+id/price_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/price_word"
        android:textAllCaps="true"
        android:textColor="@color/cardview_dark_background"
        android:textSize="16sp"/>
    <!--android:layout_alignParentLeft="true"-->

    <TextView
        android:id="@+id/price_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/price_text"
        android:textColor="@color/black"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/order_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/tertiary_text_dark"
        android:text="@string/button_text"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:onClick="submitOrder"/>


</LinearLayout>